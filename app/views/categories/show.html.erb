<% @products_category.each do |product| %>
<div class="row">
                <div class="col col-md-3">
                  <div class="card" style="width: 18rem;">
                    <%= image_tag product.images.first.variant(resize: '800x500') %>
                    <div class="card-body">
                      <h5 class="card-title"><%= product.name %></h5>
                      <p class="card-text"><span><strong>$<%= product.price %></strong></span></p>
                      <p class="card-text"><%= product.description %></p>
                      <%= link_to 'Show', shop_product_path(product.shop, product) %>
                      <%= link_to 'Edit', edit_shop_product_path(product.shop, product) %>
                      <%= link_to 'Destroy', shop_product_path(product.shop, product), method: :delete, data: { confirm: 'Are you sure?' } %>
                    </div>
                  </div>
                </div>
                  <% end %>
              </div>

